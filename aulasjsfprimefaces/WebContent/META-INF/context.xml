<?xml version="1.0" encoding="UTF-8"?>
<Context reloadable="true">

	<Resource 
		name="jdbc/datasource" 
		auth="Container"
		type="javax.sql.DataSource" 
		defaultAutoCommit="false" 
		maxActive="50"
		maxIdle="10" maxWait="10" 
		initialSize="10"
		driverClassName="org.postgresql.Driver" 
		validationQuery="SELECT 'OK'" 
		testWhileIdle="true"
		testOnBorrow="true"
		numTestPerEvictionRun="5"
		timeBetweenEvictionRunsMillis="5000"
		minEvictableIdleTimeMillis="60000"
		antiJARLocking="false"
		antResourceLocking="false"
		username="postgres"
		password="postgres"
		url="jdbc:postgresql://localhost:5432/cursojsfprimefaces?autoReconect=true"
	/>
		<!-- Classe do tomcat que esta lendo este arquivo e org.apache.tomcat.dbcp.dbcp.PoolingDataSource -->
		<!-- Pool de Conexoes -->
</Context>